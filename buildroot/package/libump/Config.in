config BR2_PACKAGE_LIBUMP
	bool "libump"
	depends on BR2_TOOLCHAIN_USES_GLIBC
	depends on BR2_arm
	help
	  The ARMs Universal Memory Provider userspace library.
	  This library is a requirement for ARMs binary Mali driver.

