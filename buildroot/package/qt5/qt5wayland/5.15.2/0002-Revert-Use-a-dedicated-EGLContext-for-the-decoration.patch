+private:
+    GLuint m_program;
+    GLenum m_activeTextureUnit;
+    GLuint m_texture;
+    GLuint m_fbo;
+    GLint m_depthWriteMask;
+    GLint m_colorWriteMask[4];
+    GLboolean m_blend;
+    GLboolean m_depth;
+    GLboolean m_cull;
+    GLboolean m_scissor;
