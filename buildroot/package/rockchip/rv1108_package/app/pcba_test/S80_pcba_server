#!/bin/sh
#
# Start the pcba_server....
#


case "$1" in
  start)
	printf "Starting pcba_server: "
	pcba_server &
	[ $? = 0 ] && echo "OK" || echo "FAIL"
	;;
  stop)
	printf "Stopping pcba_server: "
	busybox killall pcba_server
	[ $? = 0 ] && echo "OK" || echo "FAIL"
	;;
  restart|reload)
	"$0" stop
	"$0" start
	;;
  *)
	echo "Usage: $0 {start|stop|restart}"
	exit 1
esac

exit $?

