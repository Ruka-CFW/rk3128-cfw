index 24d3cfe..34e5816 100644
--- a/wsapi-1.6.1/src/wsapi/util.lua
+++ b/wsapi-1.6.1/src/wsapi/util.lua
@@ -174,7 +174,7 @@ function _M.make_env_post(pd, type, qs)
 end
 
